<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.user.mybirthday.MainActivity"
    android:background="@drawable/birthy">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="36dp"
        android:layout_marginTop="24dp"
        android:text="@string/HBDT"
        android:textColor="@android:color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.065"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.032" />

    <EditText
        android:id="@+id/textview1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView"
        android:layout_alignBottom="@+id/textView"
        android:layout_alignStart="@+id/textView2"
        android:textColor="@android:color/black"
        android:text="@string/InsertName"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.594"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView

        android:id="@+id/android:icon2"
        android:layout_width="102dp"
        android:layout_height="96dp"
        android:layout_alignStart="@+id/textView2"
        android:layout_below="@+id/textview1"
        android:layout_marginStart="12dp"
        android:layout_marginTop="82dp"
        android:scaleType="center"
        android:src="@mipmap/ic_launcher"
        tools:layout_editor_absoluteX="141dp"
        tools:layout_editor_absoluteY="67dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/android:icon2"
        android:layout_below="@+id/android:icon2"
        android:layout_marginStart="6dp"
        android:layout_marginTop="38dp"
        android:text="OPEN ME"
        tools:layout_editor_absoluteX="148dp"
        tools:layout_editor_absoluteY="379dp"
        android:onClick="wishes"/>

    <TextView
        android:id="@+id/textView2"
        android:text="@string/AndroidNougat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:textColor="@android:color/black" />


    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:id="@+id/layout2"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="@drawable/birth"
android:visibilty="invisible">

<ImageView
    android:id="@+id/imageView2"
    android:layout_width="300dp"
    android:layout_height="280dp"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="50dp"
    android:src="@drawable/hbd"
    android:visibilty="invisible"/>

<ImageView
    android:id="@+id/imageView"
    android:layout_width="140dp"
    android:layout_height="150dp"
    android:layout_alignStart="@+id/imageView2"
    android:layout_below="@+id/imageView2"
    android:layout_marginStart="12dp"
    android:src="@drawable/seeyou"
    android:visibilty="invisible"/>

</RelativeLayout>
</RelativeLayout>